<?xml version="1.0"?>
<xf:html xmlns:xf="http://www.w3.org/2002/xforms"
	xmlns:ev="http://www.w3.org/2001/xml-events"
	xmlns:jr="http://openrosa.org/javarosa"
	xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
	
	<head>
    	<title>Farm Survey</title>
		<xf:model id="farm">
			<xf:instance id="mainInstance">
				<ranking>
					<choice_1/>
					<choice_2/>
  				</ranking>
			</xf:instance>
			
			<xf:bind id="choice1" nodeset="/ranking/choice_1" type="string"/>
			<xf:bind id="choice2" nodeset="/ranking/choice_2" calculate="if(1=1, /ranking/choice_2[2]:label = '1',   /ranking/choice_2[2]:label = '9')" type="string"/>				
            				
		</xf:model>
	</head>
	
	<body>		
		<xf:group>
	  		<xf:label>Ranking from 1-10</xf:label>			
			<xf:select1 bind="choice1">
				<xf:label>Choice 1</xf:label>	
				<xf:item>
					<xf:label>1</xf:label>
					<xf:value>1</xf:value>
				</xf:item>
				<xf:item>
					<xf:label>2</xf:label>
					<xf:value>2</xf:value>
				</xf:item>											
			</xf:select1>
			
			<xf:select bind="choice2">
				<xf:label>Choice 2</xf:label>
				<xf:item>
					<xf:label>value</xf:label>
					<xf:value>2</xf:value>
				</xf:item>
			</xf:select>	  
			
				
		</xf:group>			
	</body>
</xf:html>

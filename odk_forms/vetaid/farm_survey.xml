					<xf:label>Income for school</xf:label>
					<xf:value>income_for_education</xf:value>
				</xf:item>
				<xf:item>
					<xf:label>social statues</xf:label>
					<xf:value>social_statues</xf:value>
				</xf:item>
				<xf:item>
					<xf:label>meat</xf:label>
					<xf:value>meat</xf:value>
				</xf:item>

<xf:html xmlns:xf="http://www.w3.org/2002/xforms"
	xmlns:ev="http://www.w3.org/2001/xml-events"
	xmlns:jr="http://openrosa.org/javarosa">
	
  <head>
    <title>Farm Survey</title>

	<!-- XForm Data Model -->
	<xf:model id="farm">
			<xf:instance id="mainInstance">
				<farm>
					<enterprise/>
					<livestock>
						<cattle/>
						<goats/>
						<pigs/>
						<sheep/>
						<chickens/>
						<cattle_type/>
					</livestock>
  				</farm>
			</xf:instance>
			
			<!-- Farm Details -->
			<xf:bind id="enterprise" nodeset="/farm/enterprise" type="string"/>
			<xf:bind id="noOfCattle" nodeset="/farm/livestock/cattle" required="true()" type="integer"/>
			<xf:bind id="noOfGoats" nodeset="/farm/livestock/goats" required="true()" type="integer"/>	

			<xf:bind id="noOfPigs" nodeset="/farm/livestock/pigs" required="true()" type="integer"/>	
			<xf:bind id="noOfSheep" nodeset="/farm/livestock/sheep" required="true()" type="integer"/>				
			<xf:bind id="noOfChickens" nodeset="/farm/livestock/chickens" required="true()" type="integer"/>

			<xf:bind id="cattleType" nodeset="/farm/livestock/cattle_type" required="true()" type="integer"/>				
            				
		</xf:model>
	</head>
	
	<body>
	  	<!-- Farm -->
		<xf:group>
	  		<xf:label>Farm Details</xf:label>
			<xf:select1 bind="enterprise">
				<label>What is your main enterprise?</label>
				<xf:item>
					<xf:label>Crop farmer</xf:label>
					<xf:value>crop_farmer</xf:value>
				</xf:item>
				<xf:item>
					<xf:label>Livestock farmer</xf:label>
					<xf:value>livestock_farmer</xf:value>
				</xf:item>
				<xf:item>
					<xf:label>Both</xf:label>
					<xf:value>both</xf:value>
				</xf:item>
			</xf:select1>
			
			<xf:group>
		  		<xf:label>Livestock</xf:label>
		
				<xf:input bind="noOfCattle">
					<xf:label>No of Cattle:</xf:label>
				</xf:input>
			
				<xf:input bind="noOfGoats">
					<xf:label>No of goats:</xf:label>
				</xf:input>
			
				<xf:input bind="noOfPigs">
					<xf:label>No of Pigs:</xf:label>
				</xf:input>			
			
				<xf:input bind="noOfSheep">
					<xf:label>No of Sheep:</xf:label>
				</xf:input>			
			
				<xf:input bind="noOfChickens">
					<xf:label>No of Chickens:</xf:label>
				</xf:input>
				
				<xf:select bind="cattleType" >
					<xf:label>What Type of cattle do you have?</xf:label>
					<xf:item>
						<xf:label>Zebu (bos indicus)</xf:label>
						<xf:value>zebu</xf:value>
					</xf:item>
					<xf:item>
						<xf:label>Exotic (bos taurus)</xf:label>
						<xf:value>exotic</xf:value>
					</xf:item>
					<!-- Needs a BRANCH for other -->		
					<xf:item>
						<xf:label>Other</xf:label>
						<xf:value>other</xf:value>
					</xf:item>		
				</xf:select>
			</xf:group>			
			
		</xf:group>
	</body>
</xf:html>

<h:html xmlns="http://www.w3.org/2002/xforms"
        xmlns:h="http://www.w3.org/1999/xhtml"
        xmlns:ev="http://www.w3.org/2001/xml-events"
        xmlns:xsd="http://www.w3.org/2001/XMLSchema"
        xmlns:jr="http://openrosa.org/javarosa">
  <h:head>
    <h:title>Interview details</h:title>

	<model>
		<instance>
			<interview>
				<interviewer/>
				<date/>
				<farm_id/>
				<village/>
				<location/>
				<geopoint/>
				<household_head/>
				<household_head_gender/>
				<edu_lvl/>
				<respondent/>				
				<respondent_gender/>
				<respondent_relationship_to_household_head/>				
			</interview>
		</instance>
	 
		<bind nodeset="/interview/interviewer" type="string"/>
		<bind nodeset="/interview/farm_id" type="string"/>
		<bind nodeset="/interview/date" type="date" jr:preload="date" jr:preloadParams="today"/>
		<bind nodeset="/interview/village" type="string"/>
		<bind nodeset="/interview/location" type="string"/>		
		<bind nodeset="/interview/geopoint" type="geopoint"/>
		<bind nodeset="/interview/household_head" type="string"/>
		<bind nodeset="/interview/household_head_gender" type="string"/>				
   		<bind nodeset="/interview/edu_lvl" type="string"/>
   		<bind nodeset="/interview/respondent" type="string"/>
   		<bind nodeset="/interview/respondent_gender" type="string"/>
   		<bind nodeset="/interview/respondent_relationship_to_household_head" type="string"/>
				
    </model>
  </h:head>
  <h:body>
		<input ref="farm_id">
			<label>Id of farm concerning interview</label>
			<hint>This is a unique ID for each farm in survey</hint>
		</input>
		<input ref="interviewer">
			<label>Name of interviewer</label>
		</input>
		<input ref="respondent">
			<label>Name of respondent</label>
			<hint>can be short or very long</hint>
		</input>		
		<input ref="respondent_gender">
			<label>Gender of respondent</label>
			<hint>can be short or very long</hint>
		</input>
		<input ref="respondent_relationship_to_household_head">
			<label>Relationship of respondent to household head</label>
			<hint>can be short or very long</hint>
		</input>		
		<input ref="date">
			<label>Date of interview</label>
			<hint>only future dates allowed</hint>
		</input>
		<input ref="village">
			<label>Village Name</label>
			<hint>only future dates allowed</hint>
		</input>
		<input ref="location">
			<label>Location / SubLocation Name</label>
			<hint>only future dates allowed</hint>
		</input>
		<input ref="geopoint">
			<label>Please establish the current GPS co-ords</label>
			<hint>This will get gps location</hint>
		</input>
		<input ref="household_head">
			<label>Name of head of Household</label>
			<hint>can be short or very long</hint>
		</input>
		<input ref="household_head_gender">
			<label>Gender of head of Household</label>
			<hint>can be short or very long</hint>
		</input>
		<input ref="edu_lvl">
			<label>Education level and language proficiency</label>
			<hint>can be short or very long</hint>
		</input>		
  </h:body>
</h:html>

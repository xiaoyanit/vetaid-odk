<h:html xmlns="http://www.w3.org/2002/xforms"
        xmlns:h="http://www.w3.org/1999/xhtml"
        xmlns:ev="http://www.w3.org/2001/xml-events"
        xmlns:xsd="http://www.w3.org/2001/XMLSchema"
        xmlns:jr="http://openrosa.org/javarosa">
  <h:head>
    <h:title>Interview details</h:title>

	<model>
		<instance>
			<interview>
				<interviewee/>
				<interviewer/>
				<date/>
				<village/>
				<location/>
				<geopoint/>
				<householdhead/>
				<householdheadgender/>
				<edulvl/>
				<respondent/>				
				<respondentgender/>
				<respondentrelationshiptohouseholdhead/>				
			</interview>
		</instance>
	 
		<bind nodeset="/interview/interviewee" type="string"/>
		<bind nodeset="/interview/interviewer" type="string"/>
		<bind nodeset="/interview/date" type="date" jr:preload="date" jr:preloadParams="today"/>
		<bind nodeset="/interview/village" type="string"/>
		<bind nodeset="/interview/location" type="string"/>		
		<bind nodeset="/interview/geopoint" type="geopoint"/>
		<bind nodeset="/interview/householdhead" type="string"/>
		<bind nodeset="/interview/householdheadgender" type="string"/>				
   		<bind nodeset="/interview/edulvl" type="string"/>
   		<bind nodeset="/interview/respondent" type="string"/>
   		<bind nodeset="/interview/respondentgender" type="string"/>
   		<bind nodeset="/interview/respondentrelationshiptohouseholdhead" type="string"/>
				
    </model>
  </h:head>
  <h:body>
		<input ref="interviewee">
			<label>Name of interviewer</label>
			<hint>can be short or very long</hint>
		</input>
		<input ref="interviewer">
			<label>Name of interviewee</label>
			<hint>can be short or very long</hint>
		</input>
		<input ref="date">
			<label>Date of interview</label>
			<hint>only future dates allowed</hint>
		</input>
		<input ref="village">
			<label>Village Name</label>
			<hint>only future dates allowed</hint>
		</input>
		<input ref="location">
			<label>Location / SubLocation Name</label>
			<hint>only future dates allowed</hint>
		</input>
		<input ref="geopoint">
			<label>Please establish the current GPS co-ords</label>
			<hint>This will get gps location</hint>
		</input>
		<input ref="householdhead">
			<label>Name of head of Household</label>
			<hint>can be short or very long</hint>
		</input>
		<input ref="householdheadgender">
			<label>Gender of head of Household</label>
			<hint>can be short or very long</hint>
		</input>
		<input ref="edulvl">
			<label>Education level and language proficiency</label>
			<hint>can be short or very long</hint>
		</input>
		<input ref="respondent">
			<label>Name of respondent</label>
			<hint>can be short or very long</hint>
		</input>
		<input ref="respondentgender">
			<label>Gender of respondent</label>
			<hint>can be short or very long</hint>
		</input>
		<input ref="respondentrelationshiptohouseholdhead">
			<label>Relationship of respondent to household head</label>
			<hint>can be short or very long</hint>
		</input>		
  </h:body>
</h:html>
